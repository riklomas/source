<div class="item-page">

  <h1><%= @item.title %></h1>
  
  <p>
    <strong>Categories:</strong>
    <%= format_categories @item.categories %>
  </p>
  
  <%= simple_format @item.description %>

  <%= image_tag @item.image.url %>

  <p>
    <%= link_to "Download photo", @item.image.url, download: true %>
  </p>

</div>